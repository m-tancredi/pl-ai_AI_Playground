# =============================================================================
# CONFIGURAZIONE AMBIENTE SVILUPPO - dev.pl-ai.it
# =============================================================================

# --- Ambiente ---
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# --- Domini ---
DOMAIN=dev.pl-ai.it
FRONTEND_API_URL=https://dev.pl-ai.it
ALLOWED_HOSTS=dev.pl-ai.it,localhost,127.0.0.1

# --- Database Configuration ---
# Auth Database
AUTH_DB_NAME=plai_auth_dev
AUTH_DB_USER=plai_auth_dev
AUTH_DB_PASSWORD=dev_plai_auth_2024!

# User Database
USER_DB_NAME=plai_user_dev
USER_DB_USER=plai_user_dev
USER_DB_PASSWORD=dev_plai_user_2024!

# Chatbot Database
CHATBOT_DB_NAME=plai_chatbot_dev
CHATBOT_DB_USER=plai_chatbot_dev
CHATBOT_DB_PASSWORD=dev_plai_chatbot_2024!

# Image Generator Database
IMAGE_GEN_DB_NAME=plai_imagegen_dev
IMAGE_GEN_DB_USER=plai_imagegen_dev
IMAGE_GEN_DB_PASSWORD=dev_plai_imagegen_2024!

# Resource Manager Database
RESOURCE_DB_NAME=plai_resource_dev
RESOURCE_DB_USER=plai_resource_dev
RESOURCE_DB_PASSWORD=dev_plai_resource_2024!

# Classifier Database
CLASSIFIER_DB_NAME=plai_classifier_dev
CLASSIFIER_DB_USER=plai_classifier_dev
CLASSIFIER_DB_PASSWORD=dev_plai_classifier_2024!

# Analysis Database
ANALYSIS_DB_NAME=plai_analysis_dev
ANALYSIS_DB_USER=plai_analysis_dev
ANALYSIS_DB_PASSWORD=dev_plai_analysis_2024!

# RAG Database
RAG_DB_NAME=plai_rag_dev
RAG_DB_USER=plai_rag_dev
RAG_DB_PASSWORD=dev_plai_rag_2024!

# Learning Database
LEARNING_DB_NAME=plai_learning_dev
LEARNING_DB_USER=plai_learning_dev
LEARNING_DB_PASSWORD=dev_plai_learning_2024!

# --- RabbitMQ Configuration ---
RABBITMQ_USER=plai_admin_dev
RABBITMQ_PASSWORD=dev_plai_rabbitmq_2024!

# --- Django Configuration ---
DJANGO_SECRET_KEY=dev-django-secret-key-change-in-production-2024
DJANGO_ALLOWED_HOSTS=dev.pl-ai.it,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://dev.pl-ai.it

# --- SSL Configuration ---
SSL_CERT_PATH=/etc/letsencrypt/live/dev.pl-ai.it
ACME_EMAIL=admin@pl-ai.it

# --- External Services (Development Keys) ---
# Note: Usa chiavi di test/development separate per sicurezza
OPENAI_API_KEY_FILE=/run/secrets/openai_api_key_secret
ANTHROPIC_API_KEY_FILE=/run/secrets/anthropic_api_key_secret
GEMINI_API_KEY_FILE=/run/secrets/gemini_api_key_secret
STABILITY_API_KEY_FILE=/run/secrets/stability_api_key_secret

# --- Performance Settings ---
CELERY_WORKER_CONCURRENCY=2
MAX_CONCURRENT_GENERATIONS=1
EMBEDDING_BATCH_SIZE=50

# --- Development Specific ---
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=true
CORS_ALLOW_ALL_ORIGINS=true
DISABLE_RATE_LIMITING=true

# --- Logging ---
LOG_FORMAT=verbose
ENABLE_SQL_LOGGING=true

# --- Redis (if used) ---
REDIS_URL=redis://redis:6379/0

# --- Backup Configuration ---
BACKUP_RETENTION_DAYS=7
BACKUP_ENABLED=false 