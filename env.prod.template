# =============================================================================
# CONFIGURAZIONE AMBIENTE PRODUZIONE - pl-ai.it
# =============================================================================

# --- Ambiente ---
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# --- Domini ---
DOMAIN=pl-ai.it
FRONTEND_API_URL=https://pl-ai.it
ALLOWED_HOSTS=pl-ai.it,www.pl-ai.it

# --- Database Configuration ---
# Auth Database
AUTH_DB_NAME=plai_auth_prod
AUTH_DB_USER=plai_auth_prod
AUTH_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# User Database
USER_DB_NAME=plai_user_prod
USER_DB_USER=plai_user_prod
USER_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# Chatbot Database
CHATBOT_DB_NAME=plai_chatbot_prod
CHATBOT_DB_USER=plai_chatbot_prod
CHATBOT_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# Image Generator Database
IMAGE_GEN_DB_NAME=plai_imagegen_prod
IMAGE_GEN_DB_USER=plai_imagegen_prod
IMAGE_GEN_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# Resource Manager Database
RESOURCE_DB_NAME=plai_resource_prod
RESOURCE_DB_USER=plai_resource_prod
RESOURCE_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# Classifier Database
CLASSIFIER_DB_NAME=plai_classifier_prod
CLASSIFIER_DB_USER=plai_classifier_prod
CLASSIFIER_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# Analysis Database
ANALYSIS_DB_NAME=plai_analysis_prod
ANALYSIS_DB_USER=plai_analysis_prod
ANALYSIS_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# RAG Database
RAG_DB_NAME=plai_rag_prod
RAG_DB_USER=plai_rag_prod
RAG_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# Learning Database
LEARNING_DB_NAME=plai_learning_prod
LEARNING_DB_USER=plai_learning_prod
LEARNING_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024!

# --- RabbitMQ Configuration ---
RABBITMQ_USER=plai_admin_prod
RABBITMQ_PASSWORD=CHANGE_ME_SECURE_RABBITMQ_PASSWORD_2024!

# --- Django Configuration ---
DJANGO_SECRET_KEY=CHANGE_ME_SECURE_DJANGO_SECRET_KEY_50_CHARS_MINIMUM
DJANGO_ALLOWED_HOSTS=pl-ai.it,www.pl-ai.it
CSRF_TRUSTED_ORIGINS=https://pl-ai.it,https://www.pl-ai.it

# --- SSL Configuration ---
SSL_CERT_PATH=/etc/letsencrypt/live/pl-ai.it
ACME_EMAIL=admin@pl-ai.it

# --- External Services (Production Keys) ---
OPENAI_API_KEY_FILE=/run/secrets/openai_api_key_secret
ANTHROPIC_API_KEY_FILE=/run/secrets/anthropic_api_key_secret
GEMINI_API_KEY_FILE=/run/secrets/gemini_api_key_secret
STABILITY_API_KEY_FILE=/run/secrets/stability_api_key_secret

# --- Performance Settings ---
CELERY_WORKER_CONCURRENCY=4
MAX_CONCURRENT_GENERATIONS=3
EMBEDDING_BATCH_SIZE=100

# --- Production Specific ---
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
CORS_ALLOW_ALL_ORIGINS=false
DISABLE_RATE_LIMITING=false

# --- Security ---
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# --- Logging ---
LOG_FORMAT=json
ENABLE_SQL_LOGGING=false
SENTRY_DSN=YOUR_SENTRY_DSN_HERE

# --- Redis (if used) ---
REDIS_URL=redis://redis:6379/0

# --- Database Performance ---
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=true

# --- Backup Configuration ---
BACKUP_RETENTION_DAYS=30
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=eu-central-1

# --- Monitoring ---
ENABLE_METRICS=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# --- Email Configuration ---
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=noreply@pl-ai.it
EMAIL_HOST_PASSWORD=YOUR_EMAIL_PASSWORD
DEFAULT_FROM_EMAIL=noreply@pl-ai.it

# --- Cache Configuration ---
CACHE_TTL=3600
REDIS_CACHE_DB=1 